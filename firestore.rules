rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow users to read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow user creation during signup
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Materials collection - allow authenticated users to read/write
    match /materials/{materialId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
        request.resource.data.uploaderUID == request.auth.uid &&
        request.resource.data.class is string &&
        request.resource.data.class != "";
      allow update: if request.auth != null &&
        request.auth.uid == resource.data.uploaderUID;
      allow delete: if request.auth != null &&
        request.auth.uid == resource.data.uploaderUID;
    }
  }
}
